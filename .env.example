# Copy to .env and fill in values

NODE_ENV=production
PORT=3200

# Redis connection (use shared-redis container name in Docker network)
REDIS_URL=redis://shared-redis:6379/0

# API authentication (generate a 32+ character random string)
API_SECRET=your-secure-api-secret-here

# CORS origin for Cloudflare Pages
CORS_ORIGIN=https://stacknews.org

# FRED API key for yield curve data (get from https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=your-fred-api-key-here
